<%- include("partials/header") %>

<style type="text/css">
  button {
    background-color: #a233c8;
  }
</style>
<div class="container">
  <div>
    <h1 style="text-align: center">Add new Comment to <%=blog.name%></h1>
    <div style="width: 30%; margin: 30px auto">
      <form action="/blogs/<%=blog._id%>/comments?_method=PUT" method="POST">
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="comment[text]"
            placeholder="add a comment"
          />
        </div>

        <div class="form-group">
          <button class="btn btn-lg text-white btn-block">SUBMIT</button>
        </div>
      </form>
      <a href="/blogs">Go back</a>
    </div>
  </div>
</div>
<%- include("partials/footer") %>
