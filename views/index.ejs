<%- include("partials/header") %>

<style type="text/css">
  body {
    background-color: #f5f5f5;
  }
  .upper {
    margin-top: 150px;
  }

  .space {
    margin-top: 25px;
    margin-bottom: 30px;
  }
  .imagesize {
    height: 110%;
    width: 100%;
  }
</style>

<div class="ui main text fluid container space">
  <div class="ui center aligned huge header space">
    <div class="ui massive black compact active button space">
      Your Daily Read
    </div>
  </div>
  <div class="ui top attached segment">
    <div class="ui divided relaxed items">
      <% blogs.forEach(function(blogs){ %>
      <div class="item upper">
        <div class="ui medium bordered image">
          <img src="<%= blogs.image %>" />
        </div>
        <div class="middle aligned content label">
          <a class="ui purple large header"><%=blogs.title%></a>

          <div class="ui right floated label">
            <%=blogs.created.toDateString()%>
          </div>

          <div class="meta">
            <span class="cinema">Theme: <%=blogs.theme%></span>
          </div>

          <div class="description">
            <p>
              <% if(blogs.body==null){ %> <%-blogs.body%>... <%}%>
              <%if(blogs.body != null){%> <%if( blogs.body.substr(0, 170)){ %>
              <%-blogs.body.substr(0, 170)%>... <%}%> <%
              if(!blogs.body.substr(0, 170)){ %> <%-blogs.body.substr(0,
              170)%>... <%}}%>
            </p>
          </div>

          <div class="item">
            <a href="/blogs/<%=blogs._id%>">
              <div
                class="ui animated compact right floated purple button"
                tabindex="0"
              >
                <div class="visible content">Read More</div>
                <div class="hidden content">
                  <i class="right white arrow icon"></i>
                </div>
              </div>
            </a>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </div>

  <%- include("partials/footer") %>
</div>
